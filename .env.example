# Prisma Database Configuration
# Get these from Prisma Console: https://console.prisma.io
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY_HERE"
DIRECT_URL="postgres://YOUR_DATABASE_URL_HERE"

# NextAuth Configuration
# For production, set NEXTAUTH_URL to your actual domain (e.g., https://yourdomain.vercel.app)
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="YOUR_NEXTAUTH_SECRET_HERE"

# Google OAuth (optional)
# Get from: https://console.cloud.google.com
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe Configuration
# Get from: https://dashboard.stripe.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_STRIPE_PUBLISHABLE_KEY"
STRIPE_SECRET_KEY="sk_live_YOUR_STRIPE_SECRET_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# Stripe Price IDs
# Get from Stripe Dashboard → Products → Your Product → Pricing
STRIPE_STUDENT_PRICE_ID="price_YOUR_STUDENT_PRICE_ID"
STRIPE_PROFESSIONAL_PRICE_ID="price_YOUR_PROFESSIONAL_PRICE_ID"

# App Configuration
# For production, set to your actual domain (e.g., https://yourdomain.vercel.app)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
